<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Our Products</title>
    <%- include('partials/header.ejs') %>
    <link rel="stylesheet" href="/css/listing.css"/>
  </head>
  <body onload="categoryFind();">
    <%- include('partials/sidebar.ejs') %>
    <main>
      <%- include('partials/navbar.ejs') %>
      <!-- Category Selector -->
      <div class="bootstrap-wrapper">
        <div class="jumbo-box">
          <h1>Our Products</h1>
          <div class="row category-list">
            <div class="col-md-2" onclick="window.location.href = '/listing/tshirts';">
              <div class="cat-icon tshirt-icon"></div>
              <h4>Tshirt</h4>
            </div>
            <div class="col-md-2" onclick="window.location.href = '/listing/shirts';">
              <div class="cat-icon socks-icon"></div>
              <h4>Shirt</h4>
            </div>
            <div class="col-md-2" onclick="window.location.href = '/listing/bottoms';">
              <div class="cat-icon bottom-icon"></div>
              <h4>Bottoms</h4>
            </div>
            <div class="col-md-2" onclick="window.location.href = '/listing/outerwears';">
              <div class="cat-icon outerwear-icon"></div>
              <h4>Outerwear</h4>
            </div>
            <div class="col-md-2" onclick="window.location.href = '/listing/knitwears';">
              <div class="cat-icon headwear-icon"></div>
              <h4>Knitwear</h4>
            </div>
            <div class="col-md-2" onclick="window.location.href = '/listing/accessories';">
              <div class="cat-icon accessories-icon"></div>
              <h4>Accessories</h4>
            </div>
          </div>
        </div>
      </div>
      <!-- End of Category Selector -->

      <!-- Item List -->
      <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet">
      <section class="hero-section">
        <div class="card-grid">
          <% products.forEach((product, index) => { %>
            <a class="card" href="/listing/product/<%= product._id %>">
              <!-- <div class="card__background" style="background-image: url(https://static.zara.net/photos///2021/I/0/2/p/9240/303/800/2/w/563/9240303800_1_1_1.jpg?ts=1630059337689)"></div> -->
              <%
                let images = product.stocks[0].images;
              %>
              <div class="card__background" style="background-image: url(<%= images[0] %>)"></div>
              <div class="card__content">
                <p class="card__price">â‚¹ <%= product.price %></p>
                <h3 class="card__heading"><%= product.name %></h3>
                <button type="button" name="button">Add to Cart</button>
              </div>
            </a>
          <% }); %>
        </div>
      </section>
      <!-- End of Item list -->


      <%- include('partials/footer.ejs') %>
    </main>
    <div class="zeynep-overlay"></div>
  </body>
  <script type="text/javascript" src="/js/_thirdparty/jquery-3.3.1.min.js"></script>
  <script type="text/javascript" src="/js/_thirdparty/bootstrap.min.js"></script>
  <script type="text/javascript" src="/js/_thirdparty/zeynep.min.js"></script>
  <script type="text/javascript" src="/js/_general/sidebar-interaction.js"></script>
  <script type="text/javascript" src="/js/listing.js"></script>
</html>
