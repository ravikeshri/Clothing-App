              <div class="row">
                <div class="col-md-4">
                  <p>Price :</p>
                  <h3>$117.99</h3>
                </div>
                <div class="col-md-4">
                  <p>Color :</p>
                  <ul class="color-list">
                    <li></li>
                    <li></li>
                    <li></li>
                  </ul>
                </div>
                <div class="col-md-4">
                  <p>Size :</p>
                  <ul class="size-list">
                    <li>S</li>
                    <li>M</li>
                    <li>L</li>
                    <li>XL</li>
                  </ul>
                </div>
              </div>
              <div class="row">
                <div class="col-md-4 quantity-control">
                  <button type="button" name="button">-</button>
                  <button type="button" name="button">1</button>
                  <button type="button" name="button">+</button>
                </div>
                <div class="col-md-4">
                  <button id="add-cart" type="button" name="button">Add to Cart</button>
                </div>
                <div class="col-md-4">
                  <p id="fav">&#x2764;</p>
                </div>
              </div>
            </div>


            </div>

          </div>
        </div>
      </div>
      <!-- End of Product Body -->


      <%- include('partials/footer.ejs') %>
    </main>
    <div class="zeynep-overlay"></div>
