<!DOCTYPE html>
<html lang="en">
<head>
    <title>Admin Portal</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>
  <style media="screen">
  body{
    margin : 20px 0px;
  }
  form{
    margin : 20px 0px;
  }
  </style>
    <div class="container">
      <!-- Product Details -->
      <h1 style="margin-bottom : 40px;">Add new product</h1>
      <form class="row g-3" action="/admin/listing/new" method="POST" enctype="multipart/form-data">
        <div class="col-12">
          <label for="name" class="form-label">Product Name</label>
          <input type="text" name="name" class="form-control" id="name" placeholder="Cotton Tshirt plain" required>
        </div>
        <div class="col-12">
          <label for="description" class="form-label">Description: </label>
          <input type="text" name="description" class="form-control" id="description" placeholder="Loose-fitting long sleeve T-shirt with a round neckline." required />
        </div>
        <div class="col-md-4">
          <label for="gender" class="form-label">Gender: </label>
          <select name="gender" class="form-select" id="gender">
              <option value="man">Man</option>
              <option value="woman">Woman</option>
              <option value="unisex">Unisex</option>
          </select>
        </div>
        <div class="col-md-4">
          <label for="category" class="form-label">Category: </label>
          <select name="category" class="form-select" id="category">
              <option value="tshirt">T-shirt</option>
              <option value="shirt">Shirt</option>
              <option value="bottoms">Bottoms</option>
              <option value="outerwear">Outerwear</option>
              <option value="knitwear">Knitwear</option>
              <option value="accessories">Accessories</option>
          </select>
        </div>
        <div class="col-md-4">
          <label for="price" class="form-label">Price: </label>
          <input type="number" name="price" id="price" class="form-control" placeholder="In rupees"/>
        </div>

        <!-- Stocks starts here -->

        <!-- 1 -->
        <h4 style="margin-top : 40px;" >Stock 1</h4>
        <div class="col-md-6">
          <label for="colour[0][name]" class="form-label">Colour[0][name]: </label>
          <input type="text" name="colour[0][name]" class="form-control" placeholder="Coral" required />
        </div>
        <div class="col-md-6">
          <label for="colour[0][code]" class="form-label">Colour[0][code]: </label>
          <input type="color" name="colour[0][code]" class="form-control form-control-color" style="width : 100%;" required />
        </div>
        <div class="col-md-3">
          <label for="_s[0]" class="form-label">S: </label>
          <input type="number" name="_s[0]" class="form-control" placeholder="0" required />
        </div>
        <div class="col-md-3">
          <label for="_m[0]" class="form-label">M: </label>
          <input type="number" name="_m[0]" class="form-control" placeholder="0" required /> <br>
        </div>
        <div class="col-md-3">
          <label for="_l[0]" class="form-label">L: </label>
          <input type="number" name="_l[0]" class="form-control" placeholder="0" required />
        </div>
        <div class="col-md-3">
          <label for="_xl[0]" class="form-label">XL: </label>
          <input type="number" name="_xl[0]" class="form-control" placeholder="0" required />
        </div>
        <div class="mb-3">
          <label for="images[0]" class="form-label">Images[0]: </label>
          <input type="file" class="form-control" name="images[0]" id="images[0]" multiple required />
        </div>


        <!-- 2 -->
        <h4 style="margin-top : 40px;">Stock 2</h4>
        <div class="col-md-6">
          <label for="colour[1][name]" class="form-label">Colour[1][name]: </label>
          <input type="text" name="colour[1][name]" class="form-control" placeholder="Coral" required />
        </div>
        <div class="col-md-6">
          <label for="colour[1][code]" class="form-label">Colour[1][code]: </label>
          <input type="color" name="colour[1][code]" class="form-control form-control-color" style="width : 100%;" required />
        </div>
        <div class="col-md-3">
          <label for="_s[1]" class="form-label">S: </label>
          <input type="number" name="_s[1]" class="form-control" placeholder="0" required />
        </div>
        <div class="col-md-3">
          <label for="_m[1]" class="form-label">M: </label>
          <input type="number" name="_m[1]" class="form-control" placeholder="0" required /> <br>
        </div>
        <div class="col-md-3">
          <label for="_l[1]" class="form-label">L: </label>
          <input type="number" name="_l[1]" class="form-control" placeholder="0" required />
        </div>
        <div class="col-md-3">
          <label for="_xl[1]" class="form-label">XL: </label>
          <input type="number" name="_xl[1]" class="form-control" placeholder="0" required />
        </div>
        <div class="mb-3">
          <label for="images[1]" class="form-label">Images[1]: </label>
          <input type="file" class="form-control" name="images[1]" id="images[1]" multiple required />
        </div>

        <!-- 3 -->
        <h4 style="margin-top : 40px;">Stock 3</h4>
        <div class="col-md-6">
          <label for="colour[2][name]" class="form-label">Colour[2][name]: </label>
          <input type="text" name="colour[2][name]" class="form-control" placeholder="Coral" required />
        </div>
        <div class="col-md-6">
          <label for="colour[2][code]" class="form-label">Colour[2][code]: </label>
          <input type="color" name="colour[2][code]" class="form-control form-control-color" style="width : 100%;" required />
        </div>
        <div class="col-md-3">
          <label for="_s[2]" class="form-label">S: </label>
          <input type="number" name="_s[2]" class="form-control" placeholder="0" required />
        </div>
        <div class="col-md-3">
          <label for="_m[2]" class="form-label">M: </label>
          <input type="number" name="_m[2]" class="form-control" placeholder="0" required /> <br>
        </div>
        <div class="col-md-3">
          <label for="_l[2]" class="form-label">L: </label>
          <input type="number" name="_l[2]" class="form-control" placeholder="0" required />
        </div>
        <div class="col-md-3">
          <label for="_xl[2]" class="form-label">XL: </label>
          <input type="number" name="_xl[2]" class="form-control" placeholder="0" required />
        </div>
        <div class="mb-3">
          <label for="images[2]" class="form-label">Images[2]: </label>
          <input type="file" class="form-control" name="images[2]" id="images[2]" multiple required />
        </div>

        <div class="col-12">
          <button type="submit" class="btn btn-primary">Add Stock</button>
        </div>
      </form>
      <div class="col-12">
        <a href="/admin/logout" class="btn btn-danger">Logout</a>
      </div>
    </div>
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</html>
